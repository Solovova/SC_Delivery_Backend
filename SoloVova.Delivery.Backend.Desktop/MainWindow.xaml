<Window x:Class="SoloVova.Delivery.Backend.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SoloVova.Delivery.Backend.Desktop"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
        
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Grid.Column="0" Click="ButtonAddRowsSimple_OnClick">Add rows simple</Button>
        <Button Grid.Row="1" Grid.Column="0" Click="ButtonAddRowsByCommands_OnClick">Add rows by commands</Button>
        <Button Grid.Row="2" Grid.Column="0" Click="ButtonDeleteAll_OnClick">Delete all</Button>
        
        <TextBox Grid.Row="0" Grid.RowSpan="4" Grid.Column="1" x:Name="tb"></TextBox>
    </Grid>
</Window>
